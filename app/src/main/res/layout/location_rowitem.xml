<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_location"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_locmarker"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
        android:id="@+id/tv_locname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/iv_loc"
        />
    <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
        android:id="@+id/tv_locAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_below="@id/tv_locname"
        android:layout_toRightOf="@+id/iv_loc"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/black"
        android:layout_below="@+id/tv_locAddress"
        android:layout_toRightOf="@+id/iv_loc"
        android:layout_marginLeft="@dimen/_10sdp"
        />

</RelativeLayout>