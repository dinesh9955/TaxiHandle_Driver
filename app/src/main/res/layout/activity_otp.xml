<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/topLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.OtpActivity" android:orientation="vertical"
        android:background="@color/colorPrimary">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_12sdp"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_cross_icon"

        />

        <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/iv_close"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="@string/otp"/>

    </RelativeLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:padding="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_directory_icon"/>

            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/tv_please_verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/_35sdp"
                    android:text="@string/pleaseenterthenumber"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_25sdp"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:layout_marginTop="@dimen/_10sdp"
                          android:orientation="horizontal">

                <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/tv_phonenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="+9122222222"
                        android:padding="@dimen/_3sdp"
                />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_edit"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:padding="@dimen/_2sdp"
                        app:srcCompat="@drawable/ic_e_edit"/>


            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:layout_marginHorizontal="@dimen/_30sdp"
                          android:layout_marginVertical="@dimen/_5sdp"
                          android:orientation="horizontal">

                <com.rydz.driver.CommonUtils.CustomTextUtils.CustomEditText
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/et_otp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="phone|textNoSuggestions"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/graylight"
                        android:backgroundTint="@color/black"
                />
                <com.rydz.driver.CommonUtils.CustomTextUtils.CustomEditText
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/et_otp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5sdp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:inputType="phone|textNoSuggestions"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/graylight"
                        android:backgroundTint="@color/black"
                />

                <View android:layout_width="@dimen/_12sdp"
                      android:layout_height="@dimen/_3sdp"
                      android:background="@color/graylight"
                      android:layout_gravity="center"
                      android:visibility="gone"
                />

                <com.rydz.driver.CommonUtils.CustomTextUtils.CustomEditText
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/et_otp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:inputType="phone|textNoSuggestions"
                        android:gravity="center"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/graylight"
                        android:backgroundTint="@color/black"
                />


                <com.rydz.driver.CommonUtils.CustomTextUtils.CustomEditText
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/et_otp4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5sdp"
                        android:inputType="phone|textNoSuggestions"
                        android:layout_gravity="center"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/graylight"
                        android:backgroundTint="@color/black"
                />

            </LinearLayout>


            <!--bind:toastMessage="@{viewModel.toastMessage}"-->

            <RelativeLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:gravity="center_vertical"
                          android:visibility="visible"
                            android:layout_marginHorizontal="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_50sdp"
                          android:orientation="horizontal">



                />
                <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/tv_timer"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:text="00:60"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                />

                <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/tv_resendotp"
                        android:text="@string/resendotp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:layout_centerVertical="true"
                        android:onClick="onClick"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"


                />

                <com.rydz.driver.CommonUtils.CustomTextUtils.CustomButton
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/btn_done"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:ems="10"
                        android:textSize="@dimen/_18sdp"
                        android:background="@drawable/ic_next_arrow_fab"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:singleLine="true"
                        android:layout_centerVertical="true"

                        android:layout_alignParentEnd="true"/>
            </RelativeLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>