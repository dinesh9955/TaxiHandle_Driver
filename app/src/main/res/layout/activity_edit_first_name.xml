<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/topLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.activity.EditFirstNameActivity">
    <include layout="@layout/layout_common_toolbar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:orientation="vertical">
        <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_120sdp"
                android:gravity="start"
                android:textColor="@color/toptextcolor"/>
        <com.rydz.driver.CommonUtils.CustomTextUtils.CustomEditText
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/et_first_name"
                android:layout_height="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:inputType="textPersonName|textNoSuggestions"
                android:ems="10"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                android:textColorHint="@color/edittextline"
                android:padding="@dimen/_3sdp"
                android:imeOptions="actionDone"

        />

        <com.rydz.driver.CommonUtils.CustomTextUtils.CustomButton
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/drawable_gradient"
                android:textColor="@color/white"
                android:text="@string/save"
                android:textAllCaps="false"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginVertical="@dimen/_20sdp"/>

    </LinearLayout>

</LinearLayout>