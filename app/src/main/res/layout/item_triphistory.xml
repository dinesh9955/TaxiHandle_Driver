<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/edittext_background"
              android:padding="@dimen/_5sdp"
              android:layout_marginHorizontal="@dimen/_5sdp"
              android:layout_marginVertical="@dimen/_5sdp"
              android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal">

        <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_11sdp"
                android:padding="@dimen/_3sdp"
                android:layout_weight="1"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>
        <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/tv_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_11sdp"
                android:padding="@dimen/_3sdp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="end|center_vertical"
                android:gravity="end|center_vertical"
                android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/tv_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:maxLines="3"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_green_dot_small"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"

            />
            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/tv_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:maxLines="3"
                    android:drawableStart="@drawable/ic_red_dot_rectangle_small"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"

            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:gravity="end|center"
                android:layout_weight="1"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="end|center_vertical"
                    android:tint="@color/black"/>

            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/tv_ammount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_right_arrow_gray"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/edittextline"
                    android:gravity="center_vertical"
                    android:tint="@color/black"/>

        </LinearLayout>


    </LinearLayout>
    <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
            android:fontFamily="@font/montserrat_regular"
            android:id="@+id/tv_cancelled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_16sdp"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:visibility="gone"
            android:text="@string/cancelled"
            android:textColor="@color/red"/>

</LinearLayout>