<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_poolRide"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_1sdp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/_2sdp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_user_image"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_person_icon_placeholder"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
        >


            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:id="@+id/tv_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_bold"
                    android:text="@string/pickup"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="@color/text_green"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:gravity="center_vertical"/>

            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:id="@+id/tv_user_wait_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="end"/>


            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/tv_bookingno"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="12sp"
                    android:gravity="start"
                     android:ellipsize="end"
                    android:text="cbbcbcbbcbbcbcbcbcbbc"
                    android:layout_marginBottom="@dimen/_2sdp"/>

            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:id="@+id/tv_bookingno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="12sp"
                    android:gravity="start"
                    android:text="cbbcbbccccc"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_2sdp"/>


        </RelativeLayout>
    </LinearLayout>

    <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
            android:id="@+id/tv_src"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="dffsdnfnbdbfnbfnbffdff"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:singleLine="true"
            android:textSize="@dimen/_12sdp"
            android:gravity="start"
            android:visibility="gone"
            android:drawablePadding="@dimen/_2sdp"
            android:drawableStart="@drawable/ic_green_dot_small"
    />
    <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
            android:id="@+id/tv_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="jcjxcmcnxmcnncc"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:singleLine="true"
            android:drawableStart="@drawable/ic_red_dot_small"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            android:drawablePadding="@dimen/_2sdp"
            android:gravity="start"/>
    <LinearLayout
            android:id="@+id/ll_waiting_rider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_7sdp"
                app:srcCompat="@drawable/ic_watch_with_left_vertical_icon"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">
            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/waitforrider"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center_vertical"/>

            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/riderhasbeennotified"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:id="@+id/cl_chat"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:layout_gravity="center"

        >

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tv_chat"
                android:fontFamily="@font/helvetica_bold"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:onClick="onClick"
                android:visibility="visible"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                app:srcCompat="@drawable/ic_chat_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />


        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_chatIndicator"
                android:fontFamily="@font/helvetica_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="@dimen/_3sdp"
                app:srcCompat="@drawable/ic_red_dot_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_note"
                android:fontFamily="@font/helvetica_bold"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_3sdp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_gravity="center"
                android:padding="@dimen/_3sdp"
                app:srcCompat="@drawable/ic_notes"
        />


        <com.rydz.driver.CommonUtils.CustomTextUtils.CustomButton
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/btn_starttrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_15sdp"
                android:text="@string/starttrip"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:background="@color/button_red"
                android:textColor="@color/white"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginVertical="@dimen/_10sdp"/>
    </LinearLayout>


</LinearLayout>