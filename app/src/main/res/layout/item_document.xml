<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_5sdp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:background="@color/white"
            android:elevation="@dimen/_5sdp"
            android:orientation="vertical">


        <ImageView
                android:id="@+id/iv_document_image"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/_120sdp"
                android:minHeight="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_3sdp"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>

        <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                android:fontFamily="@font/helvetica_bold"
                android:id="@+id/tv_document_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:textColor="@color/edittextline"
                android:textSize="15sp"
                android:text="@string/driver_licence"
                android:singleLine="true"/>

        <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/tv_document_expiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/edittextline"
                android:layout_marginTop="@dimen/_2sdp"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                android:text="@string/expiry_date"
                android:singleLine="true"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>