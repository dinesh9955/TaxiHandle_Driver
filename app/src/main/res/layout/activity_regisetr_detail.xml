<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/topLayout"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".view.activity.RegisterDetailActivity"
        android:background="@color/white">

    <include layout="@layout/layout_common_toolbar"/>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_userImage"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                         android:onClick="onClick"
                        android:src="@drawable/ic_yellow_profile"/>

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/icon_edit"

                           android:layout_alignParentEnd="true"
                           android:layout_alignParentBottom="true"
                />
            </RelativeLayout>
            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textColor="@color/black"/>


            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomEditText
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/et_first_name"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:ems="10"
                     android:textSize="15sp"
                    android:singleLine="true"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                    android:maxLength="32"
                    android:textColorHint="@color/black"
                    android:padding="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/color_cursor"

            />

            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textColor="@color/black"/>


            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomEditText
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/et_last_name"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:ems="10"
                     android:textSize="15sp"
                    android:singleLine="true"
                    android:maxLength="32"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                    android:textColorHint="@color/black"
                    android:padding="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/black"
                    android:textCursorDrawable="@drawable/color_cursor"

            />
            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/companyname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textColor="@color/black"/>


            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomEditText
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/et_companyname"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:inputType="textWebEmailAddress|textNoSuggestions"
                    android:ems="10"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:maxLength="64"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:padding="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:backgroundTint="@color/black"
                    android:textCursorDrawable="@drawable/color_cursor"

            />
            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textColor="@color/black"/>


            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomEditText
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/et_email"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:inputType="textWebEmailAddress|textNoSuggestions"
                    android:ems="10"
                     android:textSize="15sp"
                    android:singleLine="true"
                    android:maxLength="64"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:padding="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:backgroundTint="@color/black"
                    android:textCursorDrawable="@drawable/color_cursor"

            />

            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="12sp"                    android:gravity="start"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textColor="@color/black"/>


            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomEditText
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/et_password"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:inputType="textWebPassword|textNoSuggestions"
                    android:ems="10"
                     android:textSize="15sp"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:textColorHint="@color/black"
                    android:padding="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/black"
                    android:textCursorDrawable="@drawable/color_cursor"

            />



            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomTextView
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="12sp"                    android:gravity="start"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingStart="@dimen/_3sdp"
                    android:textColor="@color/black"/>


            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomEditText
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/et_confirm_password"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:inputType="textWebPassword|textNoSuggestions"
                    android:ems="10"
                     android:textSize="15sp"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:textColorHint="@color/black"
                    android:padding="@dimen/_10sdp"
                    android:imeOptions="actionDone"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/black"
                    android:textCursorDrawable="@drawable/color_cursor"

            />




            <CheckBox
                    android:id="@+id/cb_updates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:buttonTint="@color/_010101"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/by_clicking_i_would_like_to_receive_updates_n_on_the_latest_news_and_promos"
                    android:textColor="@color/_010101"
                    android:textSize="14sp"
                    android:textAlignment="viewStart"/>


            <CheckBox
                    android:id="@+id/cb_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:buttonTint="@color/_010101"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/by_clicking_i_agree_to_let_rydz_store_the_information_i_provide_in_order_to_provide_and_improve_its_services_you_may_delete_your_account_at_anytime"
                    android:textColor="@color/_010101"
                    android:textSize="14sp"
            android:checked="true"/>


      <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"

            >
                <CheckBox
                        android:id="@+id/cb_terms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/_010101"
                />


                <TextView
                        android:id="@+id/tv_terms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/string_terms"
                        android:textColor="@color/_010101"
                        android:textSize="14sp" />
            </LinearLayout>
            <com.rydz.driver.CommonUtils.CustomTextUtils.CustomButton
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/btn_reset"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:ems="10"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/ic_next_arrow_fab"
                    android:padding="@dimen/_8sdp"
                    android:onClick="onClick"
                    android:layout_gravity="end"
                    android:textAllCaps="false"
                    android:singleLine="true"
            />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
